@model LoginApp.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html>
<head>
    <title>Register</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ775eaSPhE8qDJE1TMfGAd47XFrn5eos1M" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
</head>
<body style="height: 100%; margin: 0; display: flex; align-items: center; color:white;justify-content: center; background-color: black; margin-right:20px; margin-top:20px;">
    <div class="container" style="max-width: 1200px;">
        <div class="row justify-content-center align-items-center" style="height: 80%; margin-right:350px; margin-top:220px;">
            <div class="col-md-6">
                <div class="card glass">
                    <div class="card-header text-center">
                        <h2>Register</h2> <!-- Changed to Register -->
                    </div>
                    <div class="card-body">
                        @if (ViewBag.SuccessMessage != null)
                        {
                            <div class="alert alert-success">
                                @ViewBag.SuccessMessage
                            </div>
                        }
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger">
                                @ViewBag.ErrorMessage
                            </div>
                        }
                        <form asp-controller="Register" asp-action="Register" method="post">
                            <div class="form-group">
                                <label asp-for="Username" class="control-label"></label>
                                <input type="text" asp-for="Username" class="form-control" style="padding-left:10px;" />
                                <b><span asp-validation-for="Username" class="text-danger"></span></b>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" type="password" class="form-control" style="padding-left:10px;" />
                                <b><span asp-validation-for="Password" class="text-danger"></span></b>
                            </div><br/>
                            <a href="" style="color:red;text-decoration:none">Forget Password?</a>
                            <br/><br/>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-primary">Register</button> <!-- Changed to Register -->
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8/SHzB6pZ7v2Q8" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6xdPxi3SWeF21FElDttw3" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-a5OmdW7zocA3x5m6Zq7z5lq9a5Zp/n5U8so9R3dWQY4dKoPmk/6PChKz6M4LOiLp" crossorigin="anonymous"></script>
    <script src="~/js/register.js" asp-append-version="true"></script>
</body>
</html>